<div class="text-center">
  <h1>Contact Us</h1>
  <p class="lead">We would love to hear from you!</p>
</div>

<div class="row justify-content-center">
  <div class="col-md-6">
    <%= form_with url: "/contact", method: "post", local: true, class: "needs-validation" do |f| %>
      <div class="mb-3">
        <%= f.label :name, "Name", class: "form-label" %>
        <%= f.text_field :name, class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.email_field :email, class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :message, "Message", class: "form-label" %>
        <%= f.text_area :message, class: "form-control", rows: 4, required: true %>
      </div>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>